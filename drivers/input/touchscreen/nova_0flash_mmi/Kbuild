	ccflags-y += -DNOVATECH_PEN_NOTIFIER
endif
ifneq ($(filter m y,$(CONFIG_INPUT_NOVA_EDGE_SUPPRESSION)),)
	ccflags-y += -DEDGE_SUPPRESSION
endif

